<?xml version="1.0"?>

<configuration>
	<connectionStrings>
		<add name="QuestionYourFriendsEntities" connectionString="metadata=res://*/QyfModel.csdl|res://*/QyfModel.ssdl|res://*/QyfModel.msl;provider=System.Data.SqlClient;provider connection string=&quot;Data Source=localhost;Initial Catalog=QuestionYourFriends;Integrated Security=True;MultipleActiveResultSets=True&quot;" providerName="System.Data.EntityClient" />
	</connectionStrings>
	<system.web>
		<compilation debug="true" targetFramework="4.0">
			<assemblies>
				<add assembly="System.Web.Entity, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B77A5C561934E089" />
				<add assembly="System.Data.Entity, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B77A5C561934E089" />
			</assemblies>
		</compilation>
	</system.web>
  <log4net>
    <!-- Base tracers -->
    <appender name="LogAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\QyfBackEnd.log"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="3MB"/>
      <appendToFile value="true"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %message %newline"/>
      </layout>
    </appender>

    <!-- Async tracers -->
    <appender name="LogAsyncAppender" type="QuestionYourFriendsDataAccess.QyfAsyncAppender">
      <appender-ref ref="LogAppender" />
      <param name="Priority" value="BelowNormal" />
    </appender>

    <!-- Loggers -->
    <root>
      <level value="ALL"/>
      <appender-ref ref="LogAsyncAppender"/>
    </root>
  </log4net>
	<system.webServer>
		<modules runAllManagedModulesForAllRequests="true" />
	</system.webServer>
</configuration>